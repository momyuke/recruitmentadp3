﻿﻿@model IEnumerable<FinalProject.DTO.CandidateSelectionHistoryDTO>
@using FinalProject.Utils
@using FinalProject.DTO;
@section title{
    @ViewBag.DataView["title"]
}
@section content{
    <h2><center>Candidate | Interviewed</center></h2>
    <hr class="bg-blue" />
    <!-- Alert -->
    @if (TempData["message"] != null)
    {
        <div class="alert alert-@TempData["type"] alert-dismissible fade show " role="alert">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="modal fade" id="Modaldetails" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h3 class="modal-title"><b>Details</b></h3>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Expected Salary</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" value="" readonly="readonly">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail2">Available to Join</label>
                        <input type="text" class="form-control" id="exampleInputEmail2" value="" readonly="readonly">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Benefit</label>
                        <textarea class="form-control" rows="3" readonly="readonly"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail4">Email</label>
                        <textarea class="form-control" rows="3" readonly="readonly"></textarea>
                    </div>
                    <strong>Skills Set</strong><br />
                    <ul style="padding-left: 1.2em"></ul>
                    <label>Job Experiences</label>
                    <div class="form-group">
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" type="button" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link " align="center" id="nav-home-tab" href="~/candidate/interview/read" role="tab" aria-controls="nav-home" aria-selected="true">Interview</a>
                <a class="nav-brand nav-link active" align="center" id="nav-profile-tab" href="~/candidate/interview/read/interviewed" role="tab" aria-selected="false">Interviewed</a>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active col mt-3" id="nav-call" role="tabpanel" aria-labelledby="nav-home-tab">
                <div class="">
                    <!-- Search form -->
                    <form class="form-inline md-form form-sm mt-4" action="~/candidate/interview/read/interviewed" id="FormFilter" method="post">
                        <input class="form-control form-control-sm mr-3 w-50" type="text" placeholder="Search" aria-label="Search" value="" name="Keyword">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn fas fa-question-circle" data-toggle="modal" data-target="#exampleModal">
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Information</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Untuk penggunaan fitur "Search" : Anda bisa mencari kandidat yang mengandung suatu huruf atau kata yang terdapat dalam; nama, alamat email, atau dengan no teleponnya. <br />
                                        PERHATIAN : Fitur "Search" ini menggunakan Case Sensitive yang berarti bahwa kecil atau besarnya huruf sangat diperhitungkan. Contoh : Nama Kandidat adalah Muhammad Galih, namun jika anda mencari dengan kata MUHAMMAD  GALIH atau muhammad galih. Maka nama kandidat Muhammad Galih tidak akan keluar.  <br />
                                        <br />
                                        Untuk penggunaan fitur "Data Per Page" : Anda bisa memasukkan kolom tersebut dengan nilai angka untuk menentukan jumlah kandidate yang bisa anda lihat dalam satu halaman.
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input class="form-control form-control-sm mr-3 w-50" type="text" placeholder="Data Per Page" aria-label="Search" value="" name="DataPerPage">
                        <select class="form-control form-control-sm mr-3 float-right" name="POSITION" id="ListPosition">
                            <option value="all">All</option>
                            @foreach (var pos in ViewBag.DataView["ListPosition"])
                            {
                                <option value="@pos.JOBPOSITION_NAME">@pos.JOBPOSITION_NAME</option>
                            }
                        </select>
                        <select class="form-control form-control-sm mr-3 float-right" name="CANDIDATE_STATE" id="ListState">
                            <option value="0">All</option>
                            @foreach (var st in ViewBag.DataView["ListState"])
                            {
                                <option value="@st.ID">@st.STATE_NAME</option>
                            }
                        </select>
                        <input type="submit" class="btn btn-primary mr-3 float-right" value="Filter" name="filter" />
                    </form>
                    <table class="table table-striped table-bordered table-sm table-responsive mt-4" cellspacing="0">
                        <thead class="table-primary text-center">
                            <tr class="text-center">
                                <th scope="col">Nama</th>
                                <th scope="col">Applied Position</th>
                                <th scope="col">Suitable Position</th>
                                <th scope="col">Source</th>
                                <th scope="col">Number Phone</th>
                                <th scope="col">Email</th>
                                <th scope="col">Interviewer PIC</th>
                                <th scope="col">Sourcing Date</th>
                                <th scope="col">State</th>
                                <th scope="col">Interviewer Notes</th>
                                <th scope="col" colspan="2">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var candidate in Model)
                            {
                            <tr>
                                <td>@candidate.CANDIDATE_NAME</td>
                                <td>@candidate.CANDIDATE_APPLIED_POSITION</td>
                                <td>@(candidate.CANDIDATE_SUITABLE_POSITION == null ? "-" : candidate.CANDIDATE_SUITABLE_POSITION)</td>
                                <td>@candidate.CANDIDATE_SOURCE</td>
                                <td>@candidate.CANDIDATE_PHONE</td>
                                <td>@candidate.CANDIDATE_EMAIL</td>
                                <td>@candidate.PIC_FULL_NAME</td>
                                <td>@Html.Encode(string.Format("{0:dd/MM/yyyy}", candidate.CANDIDATE_SOURCING_DATE))</td>
                                <td>@candidate.CANDIDATE_STATE_NAME</td>
                                <td>@candidate.NOTES</td>
                                <td>
                                    <a href="~/candidate/praselection/read/detailcandidate/@candidate.CANDIDATE_ID" class="btn btn-success input-sm">Details</a>
                                </td>
                                <td>
                                    <a href="~/candidate/interview/update/interviewed/next/@candidate.CANDIDATE_ID" class="btn btn-info input-sm @MenuUtils.CheckButtonAcc(2,15)">Next</a>

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <!-- For Pagination Mank-->
                    @{ int length = Request.Url.ToString().Split('/').Length;}
                    <hr class="bg-blue" />
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            @for (int i = 1; i <= Convert.ToInt16(ViewBag.DataView["PageCount"]); i++)
                            {
                                if (length <= 8)
                                {
                                    if (i == 1)
                                    {
                                        <li class="page-item active"><a class="page-link " href="~/candidate/interview/read/interviewed/@i">@i</a></li>
                                    }
                                    else
                                    {
                                        <li class="page-item"><a class="page-link" href="~/candidate/interview/read/interviewed/@i">@i</a></li>
                                    }


                                }
                                else
                                {
                                    if (Convert.ToInt16(Request.Url.ToString().Split('/').Last()) == i)
                                    {
                                        <li class="page-item active"><a class="page-link" href="~/candidate/interview/read/interviewed/@i">@i</a></li>
                                    }
                                    else
                                    {
                                        <li class="page-item"><a class="page-link" href="~/candidate/interview/read/interviewed/@i">@i</a></li>
                                    }
                                }

                            }

                        </ul>

                    </nav>
                    <!--End Pagination Mank-->
                </div>
            </div>
        </div>
        <script src="~/Content/Assets/Js/candidate/interview/detail.js"></script>
}
